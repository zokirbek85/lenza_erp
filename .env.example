# Django Core Settings
# --------------------
# Generate SECRET_KEY with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-super-secret-key-here-min-50-characters-CHANGE-THIS

# Debug mode (ALWAYS false in production)
DJANGO_DEBUG=False

# Allowed hosts (comma-separated, no spaces)
DJANGO_ALLOWED_HOSTS=erp.lenza.uz,45.138.159.195,0.0.0.0,127.0.0.1,localhost

# CSRF and CORS origins (comma-separated, no spaces)
DJANGO_CSRF_TRUSTED_ORIGINS=https://erp.lenza.uz
DJANGO_CORS_ALLOWED_ORIGINS=https://erp.lenza.uz

# Environment (production or development)
ENV=production

# Database Configuration (PostgreSQL)
# ------------------------------------
USE_POSTGRES=true
POSTGRES_DB=lenza_erp_db
POSTGRES_USER=lenza_erp_user
# Generate secure password with: openssl rand -base64 32
POSTGRES_PASSWORD=your-secure-database-password-CHANGE-THIS
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis Configuration (for Channels/WebSocket)
# ---------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0
CHANNEL_LAYER_BACKEND=channels_redis.core.RedisChannelLayer

# Static and Media Files
# -----------------------
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# JWT Token Settings (in minutes)
# --------------------------------
JWT_ACCESS_MINUTES=30
JWT_REFRESH_MINUTES=1440

# Telegram Bot (optional)
# ------------------------
TELEGRAM_BOT_TOKEN=8219609902:AAHtZkLxmZ4_E6fo_nwFDWkE2nnZyAxNA3M
TELEGRAM_GROUP_CHAT_ID=-1003006758530

# Company Information
# --------------------
COMPANY_NAME=Lenza ERP
COMPANY_SLOGAN=Your Business Management Solution
COMPANY_ADDRESS=Tashkent, Uzbekistan
COMPANY_PHONE=+998 XX XXX XX XX

# Gunicorn Settings
# -----------------
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
GUNICORN_WORKER_CLASS=sync
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50
GUNICORN_LOG_LEVEL=info

# Logging
# -------
DJANGO_LOG_LEVEL=INFO

# DRF Throttling
# --------------
DRF_ANON_THROTTLE=200/day

# Frontend URL (for email templates, redirects, etc.)
# ----------------------------------------------------
FRONTEND_URL=https://erp.lenza.uz
BACKEND_URL=https://erp.lenza.uz/api

# Frontend Build-time Variable
# -----------------------------
# This is used during Docker build of frontend
FRONTEND_VITE_API_URL=https://erp.lenza.uz
