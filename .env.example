# ========================================
# Lenza ERP - Production Environment Variables (Example)
# Copy to .env and replace placeholder values.
# ========================================

# Environment
ENV=production
DJANGO_DEBUG=False
USE_POSTGRES=true

# Django
DJANGO_SECRET_KEY=change-me-to-a-unique-secret
DJANGO_ALLOWED_HOSTS=erp.lenza.uz
DJANGO_CSRF_TRUSTED_ORIGINS=https://erp.lenza.uz
DJANGO_CORS_ALLOWED_ORIGINS=https://erp.lenza.uz

# Database (PostgreSQL)
POSTGRES_DB=lenza_erp_db
POSTGRES_USER=lenza_erp_user
POSTGRES_PASSWORD=replace-with-strong-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis (Channels/WebSocket)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0
CHANNEL_LAYER_BACKEND=channels_redis.core.RedisChannelLayer

# Static and Media
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# JWT (minutes)
JWT_ACCESS_MINUTES=30
JWT_REFRESH_MINUTES=1440

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_GROUP_CHAT_ID=

# Company Info
COMPANY_NAME=Lenza ERP
COMPANY_SLOGAN=Your Business Management Solution
COMPANY_ADDRESS=Tashkent, Uzbekistan
COMPANY_PHONE=+998 XX XXX XX XX

# Gunicorn
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
GUNICORN_WORKER_CLASS=sync
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50
GUNICORN_LOG_LEVEL=info

# Logging / DRF
DJANGO_LOG_LEVEL=INFO
DRF_ANON_THROTTLE=200/day

# Frontend build-time API
FRONTEND_VITE_API_URL=https://erp.lenza.uz
